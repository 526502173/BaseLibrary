<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="#eeeeee"/>


    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_banner"
            android:paddingVertical="10dp"
            android:textSize="18sp"
            android:textColor="#FE4F00"
            android:text="¥4099-4599"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            app:layout_constraintLeft_toRightOf="@id/tv_price"
            app:layout_constraintTop_toTopOf="@id/tv_price"
            app:layout_constraintBottom_toBottomOf="@id/tv_price"
            android:background="#EEEEEE"
            android:textSize="10sp"
            android:textColor="#FE4F00"
            android:text="新品上市"/>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="【下单立减200元】微星 RTX2070 8G 魔龙/龙爵/装甲师独立游戏显卡"/>


    <ImageView
            android:id="@+id/iv_gpu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_gpu_name"
            app:layout_constraintRight_toRightOf="@id/tv_gpu_name"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:src="@drawable/gpu"/>


    <TextView
            android:id="@+id/tv_gpu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_price"
            app:layout_constraintTop_toBottomOf="@id/iv_gpu"
            android:textSize="16sp"
            android:textColor="#2c2c2c"
            android:text="RTX 2070"/>

    <TextView
            android:id="@+id/tv_gpu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_gpu_name"
            app:layout_constraintRight_toRightOf="@id/tv_gpu_name"
            app:layout_constraintTop_toBottomOf="@id/tv_gpu_name"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:text="显卡芯片组"/>


    <ImageView
            android:id="@+id/iv_gpu_memory"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_gpu_memory"
            app:layout_constraintRight_toRightOf="@id/tv_gpu_memory"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:src="@drawable/gpu_memory"/>


    <TextView
            android:id="@+id/tv_gpu_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            app:layout_constraintLeft_toRightOf="@id/tv_gpu_name"
            app:layout_constraintTop_toBottomOf="@id/iv_gpu_memory"
            android:textSize="16sp"
            android:paddingHorizontal="20dp"
            android:textColor="#2c2c2c"
            android:text="8GB"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_gpu_memory"
            app:layout_constraintRight_toRightOf="@id/tv_gpu_memory"
            app:layout_constraintTop_toBottomOf="@id/tv_gpu_memory"
            android:textSize="12sp"
            android:text="显存容量"/>


    <TextView
            android:id="@+id/tv_like"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_help"
            app:layout_constraintTop_toBottomOf="@id/tv_gpu_title"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#2c2c2c"
            android:text="233人赞过"/>


    <TextView
            android:id="@+id/tv_help"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_like"
            app:layout_constraintTop_toBottomOf="@id/tv_gpu_title"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#2c2c2c"
            android:text="帮我选"/>

</androidx.constraintlayout.widget.ConstraintLayout>
